{
  "name": "product-builder",
  "version": "1.0.0",
  "description": "Product Builder =========",
  "main": "index.js",
  "scripts": {
    "build-task:scss-compile": "node-sass-chokidar --source-map true src/scss/ -o dist/css",
    "sass:build": "npm-run-all -p build-task:*",
    "sass:watch": "chokidar 'src/scss/**/*.scss' -c 'npm run sass:build'",
    "devserver": "live-server",
    "dev": "npm-run-all -p sass:* devserver",
    "start": "npm run sass:build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/papplo/product-builder.git"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "autoprefixer": "^9.3.1",
    "node-sass": "^4.10.0",
    "node-sass-chokidar": "^1.3.4",
    "npm-run-all": "^4.1.5",
    "postcss": "^7.0.6",
    "rangeslider.js": "^2.3.2",
    "serve": "latest"
  }
}
