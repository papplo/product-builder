{
  "name": "product-builder",
  "version": "1.0.0",
  "description": "Product Builder =========",
  "main": "index.js",
  "scripts": {
      "build-task:scss-compile": "node-sass-chokidar --source-map true src/scss/ -o css",
      "build-task:autoprefixer": "postcss css/*.css --use autoprefixer -d css",
      "sass:build": "npm-run-all -p build-task:*",
      "sass:watch": "chokidar 'src/scss/**/*.scss' -c 'npm run sass:build'",
      "serve": "live-server",
      "dev": "npm-run-all -p sass:* serve"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/papplo/product-builder.git"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "node-sass": "^4.10.0"
  }
}
